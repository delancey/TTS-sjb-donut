<h1>All of our Do-nut's</h1>
<div class="row">
<% @do_nuts.each do |do_nut| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= do_nut.image %>">
      <div class="caption">
        <h3><%= do_nut.name %></h3>
        <h3>Cost: $<%= do_nut.price %></h3>
        <%= link_to "More Info", do_nut, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Do-nut', new_do_nut_path, class: "btn btn-primary" %>
